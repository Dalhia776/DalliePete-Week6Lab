<!DOCTYPE html>
<html>
<head>
  <title>Whooter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render :partial => 'layouts/navbar' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <div class="row">
        <div class="col-xs-3"><div class="well">
          <%= render :partial => "users/profile" %>
          </div>
          </div>
        <div class="col-xs-6"><div class="well">

            <%= render :partial => "posts/form" %>

          </div>
          </div>
        <div class="col-xs-3"><div class="well">
          <%= render :partial => "posts/suggFollow" %>
          </div>
          </div>
    </div>
    <div class="row">
        <div class="col-xs-3"><div class="well"><p>3 xs cols</p></div></div>
        <div class="col-xs-6"><div class="well">
          <%= yield %>
        </div>
        </div>
        <div class="col-xs-3"><div class="well"><p>3 xs cols</p></div></div>
    </div>

</body>
</html>
